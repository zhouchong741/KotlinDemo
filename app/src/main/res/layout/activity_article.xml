<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ArticleActivity">

    <include layout="@layout/layout_title_bar" />

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tl_bar_color="@color/white"
        app:tl_indicator_color="@color/colorAccent"
        app:tl_indicator_corner_radius="0dp"
        app:tl_tab_padding="@dimen/dimen_15dp"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/colorAccent"
        app:tl_textsize="@dimen/text_15sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>